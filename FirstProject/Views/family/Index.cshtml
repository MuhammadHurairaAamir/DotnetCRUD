@model IEnumerable<FirstProject.Models.Family>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.members)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.father)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mother)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brothers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sisters)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.members)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.father)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mother)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brothers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sisters)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.id })
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            </td>
        </tr>
}
    </tbody>
</table>
